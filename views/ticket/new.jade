extends ../layout

block content

  .container
    ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
        
    h1 New Ticket
    p.lead Create a new ticket for help request
    br
    form(role='form', action="new", method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="mes_location", placeholder='Current Location')
      .form-group
        input.form-control(type='text', name='mes_title', placeholder='Title')
      .form-group
        input.form-control(type='text', name="mes_message", placeholder='What would you like to request help with?')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel