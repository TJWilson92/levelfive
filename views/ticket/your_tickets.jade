extends ../layout
  
block content
  
  .container
    .jumbotron
      h1 Your Tickets 

    h2 Open Tickets
    
    for ticket in openTickets 
      .panel.panel-primary
        .panel-heading
          h2
            a(href='show/' + ticket.ticketId, style='color: white;') Ticket Id: #{ticket.ticketId}
        .panel-body
          table.table 
            thead
              tr
                th 
                th 
            tbody
              tr
                td Student
                td 
                  a(href='show/' + ticket.ticketId) #{ticket.firstname} #{ticket.surname} (#{ticket.email})
              tr
                td Student Location
                td #{ticket.studentLocation}
              tr
                td Question
                td #{ticket.question}
              tr
                td Student Comments
                td #{ticket.studentMessage}
              tr
                td Ticket Seen
                td #{ticket.seen}
              tr 
                td Ticket Open
                td #{ticket.open}
              tr
                td Status Notes
                td #{ticket.ticketStatus}
      
